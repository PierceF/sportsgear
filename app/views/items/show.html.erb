<div class="container-form">
  <div class="center-text flexbox margin-title box-shadow">
    <%= cl_image_tag(@item.photos, width:400, height:400, :class => "image-border-radius box-shadow") %>
    <div class="group-showpage-text margin-card">
      <h2 class="text-large"><%= @item.name.capitalize %></h2>
      <h3 class="text-small text-slim"><%= @item.description.capitalize %></h3>
        <p class="text-banner margin-title"><%= @item.price %>$</p>
    </div>
  </div>

  <div class="margin-title">
    <%= render 'formRent', item: @deal %>
  </div>
</div>
