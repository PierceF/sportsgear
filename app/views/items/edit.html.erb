<h1>Your can edit your item here.</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @item do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <h4>Change item image.</h4>
      <span class="picture">
        <%= f.file_field :photos, accept: 'image/jpeg,image/gif,image/png' %>
      </span>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>


  </div>
</div>
