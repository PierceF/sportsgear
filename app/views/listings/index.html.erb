
<p id="notice"><%= notice %></p>


<div class="container-main">
<h1 class="center-text">Your current listings</h1>
<div class="grid-main">
    <% @items.each do |item| %>
    <div class="card-horizontal">
      <div class="card-horizontal-image">
      <%= image_tag("https://images.unsplash.com/photo-1545203993-f3a6732be268?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80", width: '100px', height: '100px') %>
      </div>
      <div class="card-horizontal-text">
        <%= link_to item.name.capitalize, item_path(item) %>
          <p><%= item.price %></p>
          </div>
            </div>

        <% end %>
        </div>
        <h2 class="center-text">Your Current Deals</h2>
          <div class="main-group">
        <% @deals.each do |deal| %>
          <div class="box-text-styling">
        <p style="font-weight:800;"><%= deal.item.name %></p>
        <p style="font-weight:200"><%= deal.item.description %></p>
        <p style="font-weight:800";><%= deal.duration %> days</p>
       <p style="font-weight:200;">Total: <%= deal.duration * deal.item.price %></p>
       </div>
        <% end %>
      </div>

      <br>
      <%= link_to 'New Item', new_item_path, class: "button-small" %>
        </div>

          </div>
      </div>
